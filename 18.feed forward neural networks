import tensorflow as tf
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Dense
from tensorflow.keras.optimizers import Adam

# Create synthetic data for binary classification
import numpy as np
np.random.seed(42)

X_train = np.random.rand(100, 1)  # Input features
y_train = (X_train > 0.5).astype(int)  # Binary labels

# Build a simple feedforward neural network
model = Sequential()
model.add(Dense(10, input_dim=1, activation='relu'))  # Input layer with 10 neurons and ReLU activation
model.add(Dense(1, activation='sigmoid'))  # Output layer with 1 neuron and sigmoid activation

# Compile the model
model.compile(optimizer=Adam(learning_rate=0.01), loss='binary_crossentropy', metrics=['accuracy'])

# Train the model
model.fit(X_train, y_train, epochs=50, batch_size=32, verbose=2)

# Create synthetic test data
X_test = np.array([[0.2], [0.8]])

# Make predictions
predictions = model.predict(X_test)

# Print the predictions
print("Predictions:")
print(predictions)
